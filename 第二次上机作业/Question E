#include <iostream>
#include <string>
#include <cmath>
using namespace std;

class Interpolation
{
  public:
  double f[10][10],x[10];
  double n,t;

  void getdata()
  {
    cout << "Please enter the number of data:" ;
    cin >> n;
    for (int i=0;i<n;i++)
    {
    cout <<"x[" << i << "]=" ;
    cin >> x[i];
    cout <<"f(x["<<i<<"])=" ;
    cin >>f[0][i];
    }
    cout << "Please enter the x:";
    cin >> t;
    
    for (int i=1;i<n;i++)
    {
      for (int j=i;j<n;j++)
      {

        f[i][j]=(f[i-1][j]-f[i-1][j-1])/(x[j]-x[j-i]);
      }
    }
  }
  };
  
class NewtonInterpolation:public Interpolation
{
  public:
  //生成差商表
  void getNewtonTable()
  {
    cout << "Newton Table:" <<endl;
    for (int i=0;i<n;i++)
    {
      cout << x[i] <<"\t";
      for ( int j=0;j<n;j++)
      {
        if (abs(f[j][i])>0.0000001)
        {
        cout<<f[j][i]<<"\t\t";}
        else {
          cout << 0 << "\t\t";
        }
      }
      cout << endl;
    }
  }
  void getInterpolation()
  {
    double p=0;
    double k[10];
    k[0]=1;
    for (int i=1;i<n;i++)
    {
      k[i]=k[i-1]*(t-x[i-1]);
    }
    for(int i=0;i<n;i++)
    {
      p+=f[i][i]*k[i];
    }
    cout <<"The value at "<<t<< " is " <<p<<endl;
    }
//输出多项式
 void getInterpolationPolynomial()
{
  cout << "The Polynomial is ";
  for (int i=0;i<n;i++)
  {
    if (f[i][i]>0 && i>0)
    cout<< "+"<<f[i][i];
    else{cout << f[i][i];}
    for (int j=0;j<i;j++){
    if (x[j]>0)
    {cout << "(x-"<<x[j]<<")";}
    else if(x[j]==0)
    {cout <<"x";}
    else
    {cout <<"(x+"<<-x[j]<<")";}
  }
  }
  cout << endl;
}
};

int main(void) {

  NewtonInterpolation new1;
  new1.getdata();
  new1.getNewtonTable();
  new1.getInterpolation();
  new1.getInterpolationPolynomial();
  return 0;

};
